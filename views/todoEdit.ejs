<!DOCTYPE html>
<head>
    <!-- Set title for the app -->
    <title>Todo App</title>
    <!-- Link css stylesheet from stylesheets folder -->
    <link rel="stylesheet" href="/static/stylesheets/style.css" type="text/css">
    <!-- Link some open source fonts and stylesheets -->
    <link href="https://fonts.googleapis.com/css?family=Baloo+Bhai|Candal|Chewy&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
    integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
</head>

<body>
    <div class="todo-container">
        <!-- Create to do list text header on the page -->
        <h2>To-Do List</h2>
        <div class="todo">
            <!-- Create form that sends a post request when submitted -->
            <form action="" method="POST" class="todo-header">
                <!-- Create input text box for typing in the task content -->
                <input type="text" name="content">
                <!-- Create submit button to submit the new task + form -->
                <button type="submit"><span class="fas fa-plus"></span></button>
            </form>
            <!-- Create list for displaying all the tasks -->
            <ul class="todo-list">
                <!-- Create new list item for each todo task -->
                <% todoTasks.forEach(details => { %>
                    <!-- If it is the task that is being edited -->
                    <% if (details._id == idTask) { %>
                    <li class="todo-list-item">
                        <!-- Create a form that edits when submitted -->
                        <form action="/edit/<%= details._id %>" method="POST">
                            <!-- Create an input text box for inputting the new task name -->
                            <input type="text" value="<%= details.content %>" name="content">
                            <!-- Create a submit button to confirm the editing is complete -->
                            <button type="submit">Confirm</button>
                            <!-- Create a cancel button that redirects to homepage to stop editing -->
                            <a href="/" class="cancel">Cancel</a>
                        </form>
                    </li>
                    <!-- If not the task being edited, display as normal -->
                    <% } else { %>
                    <li class="todo-list-item">
                        <!-- Add the task name in a div  -->
                        <div class="todo-list-item-name"><%= details.content %></div>
                        <!-- Add the edit button  -->
                        <a href="/edit/<%= details._id %>" class="edit"> 
                            <span class="fas fa-edit"></span>
                        </a>
                        <!-- Add the delete button -->
                        <a href="/remove/<%= details._id %>" class="remove"> 
                            <span class="fas fa-times"></span>
                        </a>
                    </li>
                    <% } %>
                <% }) %>
            </ul>
        </div>
    </div>
</body>